<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-grpc" version="1.0.0"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>GrpcWrapper</name>
    <js-module name="GrpcWrapper" src="www/GrpcWrapper.js">
        <clobbers target="GrpcWrapper" />
    </js-module>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="GrpcWrapper">
                <param name="ios-package" value="GrpcWrapper" />
            </feature>
        </config-file>
        <!-- <source-file src="src/ios/GrpcWrapper.swift" />
        <source-file src="src/ios/GRPCManager.swift" />
        <source-file src="src/ios/VoiceManager.swift" />
        <source-file src="src/ios/SpeechRecognitionService.swift" />
        <framework spec=":path =&gt; '.'" src="googleapis" type="podspec" /> -->
    </platform>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="GrpcWrapper">
                <param name="android-package" value="cordova-plugin-grpc.GrpcWrapper" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/GrpcWrapper.java" target-dir="src/cordova-plugin-grpc/GrpcWrapper" />
    </platform>
</plugin>